<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mswipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <com.taimin.weatherforecast.view.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/CurTemper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="70sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/CurWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/wind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/index_divider"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/zwx"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:text="紫外线"/>
                    <TextView
                        android:id="@+id/zwx"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:text="强"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/index_divider"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/ydpng"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:text="运动"/>
                    <TextView
                        android:id="@+id/yd"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:text="强"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/index_divider"
                    android:padding="5dp"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/xt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:text="血糖指数"/>
                    <TextView
                        android:id="@+id/xt"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:text="强"
                        android:layout_gravity="center"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/index_divider"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/cy"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:text="穿衣"/>
                    <TextView
                        android:id="@+id/cy"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:text="强"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/index_divider"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/xc"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:text="洗车"/>
                    <TextView
                        android:id="@+id/xc"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:text="强"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@drawable/index_divider"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:src="@drawable/kq"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:text="空气"/>
                    <TextView
                        android:id="@+id/kq"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="#fff"
                        android:text="强"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </com.taimin.weatherforecast.view.ReboundScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>